{
	"name": "boilerplate",
	"version": "1.0.0",
	"private": true,
	"pwaManifest": {
		"name": "Project Name",
		"shortName": "ProjectName.com",
		"startURL": "./index.html",
		"lang": "en-US",
		"theme": "#000000",
		"generateIconOptions": {
			"baseIcon": "./src/frontend/favicon.png",
			"sizes": [
				16,
				32,
				64,
				96,
				152,
				192,
				384,
				512
			],
			"genFavicons": true
		}
	},
	"scripts": {
		"installers": "yarn global add pm2 && yarn && npm run tasks:env",
		"watch:server": "npm run tasks:env && npm run tasks:clean-dist:server && npm run tasks:env && nodemon --watch src/server --exec babel-node src/server/www.js",
		"watch:frontend": "npm run tasks:env && npm run tasks:clean-dist:frontend && npm run tasks:env && babel-node tasks/parcel-api.js watch=true entry=src/frontend/index.html dist=dist/frontend target=browser",
		"start:server": "node dist/server/www.js",
		"build": "npm run tasks:env && npm run tasks:clean-dist && npm run build:server && npm run build:frontend",
		"build:server": "babel src/server -d dist/server --copy-files",
		"build:frontend": "babel-node tasks/parcel-api.js watch=false entry=src/frontend/index.html dist=dist/frontend target=browser",
		"tasks:env": "babel-node tasks/init-env.js",
		"tasks:clean-dist": "npm run tasks:clean-dist:frontend && npm run tasks:clean-dist:server",
		"tasks:clean-dist:server": "babel-node tasks/clean-dist-server.js",
		"tasks:clean-dist:frontend": "babel-node tasks/clean-dist-frontend.js",
		"tasks:windows-hack": "babel-node tasks/windows-parcel-css-relpath-hack.js",
		"tasks:clean-data": "",
		"tasks:clean-logs": "",
		"serve": "per-env",
		"serve:stage": "pm2 start dist/server/www.js --name stage.projectname.com --log logs/stage.log --time",
		"serve:production": "pm2 start dist/server/www.js --name www.projectname.com --log logs/production.log --time",
		"stop": "per-env",
		"stop:stage": "pm2 stop stage.projectname.com",
		"stop:production": "pm2 stop www.projectname.com",
		"feelinglucky": "npm run stop && git pull && npm run build && npm run serve"
	},
	"alias": {
		"gsap": "./libs/gsap/all",
		"layzr.js": "./libs/layzr.js"
	},
	"staticFiles": {
		"staticPath": [
			{
				"staticPath": "src/frontend/assets",
				"staticOutDir": "assets"
			}
		],
		"excludeGlob": "**/.git-keep"
	},
	"asciiheader": {
		"text": "Hello world!",
		"footer": "Thanks for looking behind the curtain."
	},
	"parcelDot": {
		"input": "./src/frontend/templates",
		"output": "./src/frontend/assets/templates/templates-bundle.js"
	},
	"dependencies": {
		"async": "^3.1.0",
		"async-es": "*",
		"autoprefixer": "^9.7.3",
		"body-parser": "*",
		"compression": "*",
		"cookie-parser": "*",
		"cors": "*",
		"debug": "*",
		"dotenv": "*",
		"express": "*",
		"express-dot-engine": "*",
		"fs-extra": "*",
		"gsap": "*",
		"js-sha256": "*",
		"jsonfile": "^5.0.0",
		"morgan": "*",
		"nedb": "*",
		"node-fetch": "^2.6.0",
		"node-notifier": "*",
		"parcel": "*",
		"per-env": "git+https://github.com/blakerutledge/per-env",
		"replace-in-file": "^5.0.2",
		"sass": "*",
		"socket.io": "*",
		"socket.io-client": "*",
		"three": "*",
		"whatwg-fetch": "*"
	},
	"devDependencies": {
		"@babel/cli": "*",
		"@babel/core": "*",
		"@babel/node": "*",
		"@babel/preset-env": "*",
		"@parcel/transformer-babel": "^2.0.0-alpha.3",
		"cssnano": "*",
		"glslify-bundle": "*",
		"glslify-deps": "*",
		"nodemon": "*",
		"parcel-bundler": "*",
		"parcel-plugin-ascii-header": "*",
		"parcel-plugin-dot": "^1.0.1",
		"parcel-plugin-imagemin": "*",
		"parcel-plugin-inlinesvg": "^0.1.1",
		"parcel-plugin-keep-asset-folders": "*",
		"parcel-plugin-nuke-dist": "*",
		"parcel-plugin-ogimage": "*",
		"parcel-plugin-pwa-manifest": "*",
		"parcel-plugin-static-files-copy": "*",
		"posthtml-favicons": "*",
		"posthtml-include": "*"
	}
}
